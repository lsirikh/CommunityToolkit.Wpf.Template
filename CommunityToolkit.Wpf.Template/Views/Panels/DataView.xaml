<UserControl
	x:Class="CommunityToolkit.Wpf.Template.Views.Panels.DataView"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:CommunityToolkit.Wpf.Template.Views.Panels"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:viewModel="clr-namespace:CommunityToolkit.Wpf.Template.ViewModels.Panels"
	d:DesignHeight="450"
	d:DesignWidth="800"
	mc:Ignorable="d">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="1*" />
			<RowDefinition Height="1*" />
		</Grid.RowDefinitions>
		<TextBlock
			Grid.Row="0"
			HorizontalAlignment="Center"
			VerticalAlignment="Center"
			Text="{Binding Content}" />

		<!--  샘플 버튼  -->
		<Button
			Grid.Row="1"
			Width="120"
			Height="30"
			HorizontalAlignment="Center"
			VerticalAlignment="Center"
			Command="{Binding ClickCommand}"
			CommandParameter="{Binding}"
			Content="클릭 테스트"
			Visibility="{Binding IsBusy, Converter={StaticResource InverseBooleanConverter}}" />

		<!--  로딩 인디케이터  -->
		<Border
			Grid.RowSpan="2"
			Background="#80000000"
			Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}">
			<StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
				<TextBlock
					HorizontalAlignment="Center"
					FontSize="16"
					Foreground="White"
					Text="로딩 중..." />
				<ProgressBar
					Width="200"
					Height="20"
					Margin="0,10,0,0"
					IsIndeterminate="True" />

				<!--  샘플 버튼  -->
				<Button
					Grid.Row="1"
					Width="120"
					Height="30"
					Margin="0,10,0,0"
					HorizontalAlignment="Center"
					VerticalAlignment="Center"
					Command="{Binding ClickCancelCommand}"
					Content="취소" />
			</StackPanel>
		</Border>
	</Grid>
</UserControl>
